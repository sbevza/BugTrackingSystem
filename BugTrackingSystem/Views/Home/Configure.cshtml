@{
    ViewBag.Title = "Configure Connection String";
}

<h2>Configure connection string</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Connection string</h4>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="ConnectionStrings">Connection string</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line valid" id="ConnectionStrings" 
                       name="ConnectionStrings" type="text" value="@ViewBag.ConnectionStrings">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
